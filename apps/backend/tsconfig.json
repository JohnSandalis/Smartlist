{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "../../",
    "esModuleInterop": true,
    "strict": true,
    "noEmitOnError": true,
    "baseUrl": "../../",
    "paths": {
      "@smartlist/types": ["packages/shared/types/src"],
      "@smartlist/schemas": ["packages/shared/schemas/src"]
    }
  },
  "include": [
    "src/**/*.ts",
    "../../packages/shared/types/src/**/*.ts",
    "../../packages/shared/schemas/src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
